<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <import type="com.glumes.ffmpeglib.FFmpegEvent" />

        <variable
            name="ClickHandler"
            type="FFmpegEvent" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnHevcToYuv"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{ClickHandler.onHevcToYuv}"
            android:text="@string/hevc_to_yuv" />

        <Button
            android:id="@+id/btnH264ToYuv"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{ClickHandler.onH264ToYuv}"
            android:text="@string/h264_to_yuv" />
    </LinearLayout>

</layout>